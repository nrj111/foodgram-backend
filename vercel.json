{
  "version": 2,
  "builds": [
    { 
        "src": "server.js", 
        "use": "@vercel/node" 
    }
  ],
  "routes": [
    { "src": "/api", "dest": "server.js" },
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/", "dest": "server.js" }
  ],
  "comments": {
    "tailwind": "Frontend Tailwind compilation happens in frontend build; backend routing unchanged."
  }
}

