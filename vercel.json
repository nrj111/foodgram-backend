{
  "version": 2,
  "builds": [
    { 
        "src": "server.js", 
        "use": "@vercel/node" 
    }
  ],
  "functions": {
    "server.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api", "dest": "server.js" },
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/", "dest": "server.js" }
  ]
}

